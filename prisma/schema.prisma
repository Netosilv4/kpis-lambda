model Empregado {
  id                  String              @id @default(cuid())
  nome                String
  email               String
  createdAt           DateTime            @default(now())
  updatedAt           DateTime            @default(now())
  status              String              @default("ATIVO")
  cargo               String
  historico HistoricoEmpregado?
  emailGestor         String?

  @@map("empregados")
}

model HistoricoEmpregado {
  empregadoId   String    @unique
  dataDeAdmissao DateTime  @default(now())
  dataDeRecisao DateTime? 
  empregado      Empregado @relation(fields: [empregadoId], references: [id])

  @@map("historicoEmpregado")
}
